- title( @tag.tag )

.row
  .span6
    .tag
      = @tag.tag
    =link_to( "Edit", edit_tag_path( @tag ) )
    .parent
      - if @tag.parent
        .parent
          = "#{@tag.parent.tag} #{(@tag.parent.id)}"
      - else
        No parent
    .children
      - if @tag.children.count > 0
        = @tag.children
      - else
        No Children
    .meta
      %dl
        - @tag.meta.each do |key,value|
          %dt= key
          %dd= value