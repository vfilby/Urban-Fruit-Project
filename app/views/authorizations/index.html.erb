<% title "Sign In" %>
<% if @authorizations %>
 <% unless @authorizations.empty? %>
  <p><strong>You can sign in to this account using:</strong></p>
   <div class="authorizations"> 
    <% for authorization in @authorizations %>
     <div class="authorization">
      <%= image_tag "authbuttons/#{authorization.provider}_32.png", :size => "32x32" %> 
      <div class="provider"><%= authorization.provider.titleize%></div> 
      <div class="uid"><%= authorization.uid %></div> 
       <%= link_to "X", authorization, :confirm =>  'Are you sure you want to remove this authorization option?', :method => :delete, :class => "remove" %> 
     </div> 
     <% end %>
     <div class="clear"></div>
    </div>
   <% end %>
   <p><%= link_to "remove current user", current_user, :confirm => 'are you sure?', :method => :delete %></p>
   <p><strong>Add another service to sign in with:</strong></p>  
  <% else %>
  <p><strong>Sign in through one of these services:</strong></p>  
<% end %> 
  
<a href="/auth/twitter" class="auth_provider"><%= image_tag "authbuttons/twitter_64.png", :size => "64x64", :alt => "Twitter" %>Twitter</a>  
<a href="/auth/facebook" class="auth_provider"><%= image_tag "authbuttons/facebook_64.png", :size => "64x64", :alt => "Facebook" %>Facebook</a>  
<a href="/auth/google_apps" class="auth_provider"><%= image_tag "authbuttons/google_64.png", :size => "64x64", :alt => "Google" %>Google</a>  
<a href="/auth/open_id" class="auth_provider"><%= image_tag "authbuttons/openid_64.png", :size => "64x64", :alt => "OpenID" %>OpenID</a>  
<div class="clear"></div>