- if @location
  - title "Plants near #{@location.qualified_name}"
- else
  - title "Browse for plants by location"


%ul
  - @child_locations.each do |location|
    %li
      = link_to location.name, "#{request.fullpath}/#{location.id}-#{location.name}"

%ul
  - if @tags
    - @tags.each do |tag|
      %li
        = link_to "#{tag.tag}", :controller => :search, :q => "#{tag.tag} near #{@location.qualified_name}"